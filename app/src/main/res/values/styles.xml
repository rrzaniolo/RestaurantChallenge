<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextView.Title" parent="AppTheme">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/floralWhite</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Subtitle" parent="AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/floralWhite</item>
    </style>

    <style name="TextView.Description" parent="AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/floralWhite</item>
    </style>

    <style name="TextView.Highlight" parent="AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/floralWhite</item>
        <item name="android:textStyle">bold</item>
    </style>


